pipeline {
   agent any
   environment {
       AWS_ACCESS_KEY_ID     = credentials('AKIAZ7SALFO4UXAMFZ')
       AWS_SECRET_ACCESS_KEY = credentials('1ZvUG6UGKQskb13gOjy9yUeex+DXg757vC3dWm')
   }
   stages {
       stage('Checkout') {
           steps {
               git 'https://github.com/shimmar8/TestRepo.git', branch: 's3'
           }
       }
       stage('Terraform Init') {
           steps {
               sh 'terraform init'
           }
       }
       stage('Terraform Plan') {
           steps {
               sh 'terraform plan -var-file="terraform.tfvars"'
           }
       }
       stage('Terraform Apply') {
           steps {
               input message: "Approve apply?"
               sh 'terraform apply -auto-approve -var-file="terraform.tfvars"'
           }
       }
   }
}

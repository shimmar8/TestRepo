pipeline {
 agent any
 environment {
   AWS_ACCESS_KEY_ID     = credentials('AKIdAZ7SALFO4SYQ2JR6H')     
   AWS_SECRET_ACCESS_KEY = credentials('pXaAGbixOcqBXkdb3sHi/rzon5lDeDDrqc+w4m9Qd')
 }
 stages {
   stage('Checkout') {
     steps {
       git "https://github.com/shimmar8/TestRepo.git"
     }
   }
   stage('Terraform Init') {
     steps {
       sh 'terraform init'
     }
   }
   stage('Terraform Validate') {
     steps {
       sh 'terraform validate'
     }
   }
   stage('Terraform Plan') {
     steps {
       sh 'terraform plan -var-file="terraform.tfvars"'
     }
   }
   stage('Terraform Apply') {
     steps {
       sh 'terraform apply -auto-approve -var-file="terraform.tfvars"'
     }
   }
 }
 post {
   failure {
     echo "Pipeline failed."
   }
   success {
     echo "S3 bucket created successfully."
   }
 }
}
